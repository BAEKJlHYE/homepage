    <insert id="insertMemberInfo" parameterType="anonymous.homepage.board.vo.JoinVO">

    INSERT INTO MEMBER_DB(
        USERID,
        PASSWD,
        USERNM,
        NICK,
        EMAIL,
        MRECAGR,
        IPUBAGR
    )
    VALUES (
        #{USERID},
        #{PASSWD}.
        #{USERNM}.
        #{NICK}.
        #{EMAIL}.
        #{MRECAGR}.
        #{IPUBAGR}
    )
    </insert>

    <select id="getIdValidAjax" resultType="anonymous.homepage.board.vo.JoinVO">
        SELECT USERID
        FROM MEMBER_DB
        WHERE USERID=#{USERID}
    </select>

    <select id="getPWValidAjax" resultType="anonymous.homepage.board.vo.JoinVO">
        SELECT PASSWD
        FROM MEMBER_DB
        WHERE PASSWD=#{PASSWD}
    </select>

    <select id="getNameValidAjax" resultType="anonymous.homepage.board.vo.JoinVO">
        SELECT USERNM
        FROM MEMBER_DB
        WHERE USERNM=#{USERNM}
    </select>

    <select id="getNickValidAjax" resultType="anonymous.homepage.board.vo.JoinVO">
        SELECT NICK
        FROM MEMBER_DB
        WHERE NICK=#{NICK}
    </select>

    <select id="getEmailValidAjax" resultType="anonymous.homepage.board.vo.JoinVO">
        SELECT EMAIL
        FROM MEMBER_DB
        WHERE EMAIL=#{EMAIL}
    </select>




</mapper>